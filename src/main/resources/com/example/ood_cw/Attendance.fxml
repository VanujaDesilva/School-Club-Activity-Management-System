<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ood_cw.Attendance">
    <children>
        <AnchorPane fx:id="attendancePane" prefHeight="600.0" prefWidth="900.0">
            <children>
                <Button fx:id="atendanceBackButton" layoutX="42.0" layoutY="37.0" mnemonicParsing="false" onAction="#onAttendanceBackButtonClick" prefHeight="25.0" prefWidth="46.0" text="Back" />
                <Label layoutX="142.0" layoutY="95.0" prefHeight="17.0" prefWidth="87.0" text="Select Club:" />
                <Label layoutX="428.0" layoutY="95.0" prefHeight="17.0" prefWidth="87.0" text="Select Event:" />
                <ChoiceBox fx:id="clubSelector" layoutX="229.0" layoutY="91.0" prefWidth="150.0" />
                <ChoiceBox fx:id="eventSelector" layoutX="515.0" layoutY="91.0" onMouseClicked="#onClubSelectorClick" prefWidth="150.0" />
                <TableView fx:id="attendanceTable" layoutX="142.0" layoutY="141.0" prefHeight="377.0" prefWidth="616.0">
                <columns>
                    <!-- Existing columns -->
                    <TableColumn fx:id="stdIdCol" prefWidth="83.0" text="Student ID" />
                    <TableColumn fx:id="firstNameCol" prefWidth="97.0" text="First Name" />
                    <TableColumn fx:id="lastNameCol" prefWidth="100.0" text="Last Name" />
                    <TableColumn fx:id="telNoCol" prefWidth="120.0" text="Telephone Number" />
                    <TableColumn fx:id="dobCol" prefWidth="90.0" text="Date of Birth" />
                    <TableColumn fx:id="attendanceStatusCol" prefWidth="125.0" text="Attendance Status" />
                </columns>
                </TableView>
                <Button fx:id="showButton" layoutX="703.0" layoutY="91.0" mnemonicParsing="false" onAction="#onShowButtonClick" prefHeight="25.0" prefWidth="55.0" text="Show" />
                <Button layoutX="413.0" layoutY="535.0" mnemonicParsing="false" onAction="#handleSaveButtonAction" prefHeight="36.0" prefWidth="74.0" text="Save" />
                <Label alignment="CENTER" layoutX="294.0" layoutY="27.0" prefHeight="39.0" prefWidth="312.0" text="Attendance">
                    <font>
                        <Font size="30.0" />
                    </font>
                </Label>
            <Label fx:id="clubSelectionError" layoutX="229.0" layoutY="73.0" prefHeight="18.0" prefWidth="150.0" textFill="RED" />
            <Label fx:id="eventSelectionError" layoutX="515.0" layoutY="73.0" prefHeight="18.0" prefWidth="150.0" textFill="RED" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
